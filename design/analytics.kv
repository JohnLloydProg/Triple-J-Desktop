                        size_hint_x: 1
                        on_enter: self.md_bg_color = app.theme['green-darker'] if root.month == self.text else app.theme['tertiary-darker']
                        on_leave: self.md_bg_color = app.theme['green'] if root.month == self.text else app.theme['tertiary']
