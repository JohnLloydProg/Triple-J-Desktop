<AnalyticsScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: app.theme['primary']
        padding: '15dp'
        spacing: '20dp'
        NavigationBar:
        ScrollView:
            size_hint: 1, 1
            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height: True
                spacing: '15dp'
                MDBoxLayout:
                    orientation: 'horizontal'
                    adaptive_height: True
                    padding: '10dp'
                    MyLabel:
                        id: member_number
                        text: '[color=#ea4444]Active Members:[/color]'
                        font_size: '25dp'
                        halign: 'left'
                        bold: True
                        markup: True
                    MDBoxLayout:
                        orientation: 'horizontal'
                        adaptive_size: True
                        spacing: '10dp'
                        MDBoxLayout:
                            orientation: 'horizontal'
                            adaptive_width: True
                            MDCheckbox:
                                id: sales_box
                                size_hint: None, 1
                                width: self.height
                                color_active: app.theme['accent']
                                color_inactive: 1, 1, 1, 1
                            MyLabel:
                                text: 'Sales Report'
                                valign: 'center'
                                color: 1, 1, 1, 1
                                size_hint: None, 1
                                width: '90dp'
                        MDBoxLayout:
                            orientation: 'horizontal'
                            adaptive_width: True
                            MDCheckbox:
                                id: attendance_box
                                size_hint: None, 1
                                width: self.height
                                color_active: app.theme['accent']
                                color_inactive: 1, 1, 1, 1
                            MyLabel:
                                text: 'Attendance Report'
                                valign: 'center'
                                color: 1, 1, 1, 1
                                size_hint: None, 1
                                width: '130dp'
                        MDBoxLayout:
                            orientation: 'horizontal'
                            adaptive_width: True
                            MDCheckbox:
                                id: activity_box
                                size_hint: None, 1
                                width: self.height
                                color_active: app.theme['accent']
                                color_inactive: 1, 1, 1, 1
                            MyLabel:
                                text: 'Activity Report'
                                valign: 'center'
                                color: 1, 1, 1, 1
                                size_hint: None, 1
                                width: '120dp'
                        MyButton:
                            text: "Generate Report"
                            md_bg_color: app.theme['violet']
                            on_press: root.generate_report(sales_box.active, attendance_box.active, activity_box.active)
                            size_hint_y: None
                            height: '70dp'
                            on_enter: self.md_bg_color = app.theme['violet-darker']
                            on_leave: self.md_bg_color = app.theme['violet']
                MDBoxLayout:
                    orientation: 'vertical'
                    adaptive_height: True
                    padding: '20dp'
                    spacing: '15dp'
                    md_bg_color: app.theme['secondary']
                    radius: 5
                    MyLabel:
                        text: 'Members Report'
                        font_size: '20dp'
                        color: app.theme['accent']
                        bold: True
                        halign: 'center'
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: 0.5*self.width
                        AnchorLayout:
                            anchor_x: 'right'
                            anchor_y: 'center'
                            size_hint_y: None
                            height: '70dp'
                            MyButton:
                                text: "Save Chart"
                                md_bg_color: app.theme['green']
                                on_press: root.save_chart(pie_charts)
                                size_hint_y: None
                                height: '70dp'
                                on_enter: self.md_bg_color = app.theme['green-darker']
                                on_leave: self.md_bg_color = app.theme['green']
                        MatplotFigureSubplot:
                            id: pie_charts
                            draw_all_axes: True
                            interactive_axis: True
                            max_hover_rate: 5 /60
                            min_max_option:True
                            auto_cursor: True
                MDBoxLayout:
                    id: months_container
                    orientation: 'horizontal'
                    adaptive_height: True
                    spacing: '5dp'
                    padding: '10dp'
                    radius: 5
                    md_bg_color: app.theme['secondary']
